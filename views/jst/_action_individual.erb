<script type="text/html" id="action-individual">
	<h2 class="col-md-12">Action # {{= id }}</h2>
	<h3 class="col-md-12">{{= user.get('username') }} - {{= type.display_name }}</h3>
	<div class='col-md-8 pull-left'>
	    <table class="table location-coordinates-table">
			<thead>
				<tr>
					<th class='col-md-2'>Lat</th>
					<th class='col-md-2'>Long</th>
					<th class='col-md-2'>Time Visited</th>
				</tr>				
			</thead>
			<tbody></tbody>
	     </table>
	 </div>
	<div id="map" class="pull-left col-md-4"></div>	 
</script>

<script type="text/html" id="action-location-coordinates-row">
	<td class='col-md-2'>{{= lat }}</td>
	<td class='col-md-2'>{{= lng }}</td>
	<td class='col-md-2'>{{= time_visited }}</td>
</script>